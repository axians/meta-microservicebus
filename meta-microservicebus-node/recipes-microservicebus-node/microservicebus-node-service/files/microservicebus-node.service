[Unit]
Description=MicroServiceBus as a Service

[Service]
ExecStart=/usr/bin/node /usr/lib/node/microservicebus-node/start.js -w
WorkingDirectory=/usr/lib/node/microservicebus-node
Restart=always
StandardOutput=syslog
StandardError=syslog
SyslogIdentifier=nodejs
User=root
Group=root
Environment=PATH=/usr/bin:/usr/local/bin:/bin/:/usr/local/sbin:/user/sbin:/sbin
Environment=NODE_ENV=production
Environment=MSB_PLATFORM=YOCTO

[Install]
WantedBy=multi-user.target
